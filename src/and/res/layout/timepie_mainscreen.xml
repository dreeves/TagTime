<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>


	<LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_marginTop="10dip"
		android:layout_gravity="center_horizontal">


		<TextView android:id="@+id/tpStat"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_margin="5dip"
			android:textSize="15sp" 
			android:text="@string/tp_stat" />

		<ToggleButton android:id="@+id/btnTog"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/tpStat" />

	</LinearLayout>

	<View android:layout_height="2px" 
		android:layout_width="fill_parent"
		android:layout_marginTop="5dip" 
		android:layout_marginBottom="5dip"
		android:background="#DFDFDF" />

	<LinearLayout 
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_marginTop="10dip"
		android:layout_gravity="center_horizontal">

		<TextView android:id="@+id/Viewlog" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_margin="5dip"
			android:textSize="20sp" 
			android:text="View Log" 
					android:layout_gravity="center_horizontal"/>

		<View android:layout_height="1px" 
		android:layout_width="fill_parent"
		android:layout_marginTop="5dip" 
		android:layout_marginBottom="5dip"
		android:background="#DFDFDF" />
			
		<TextView android:id="@+id/ExportLink" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_margin="5dip"
			android:textSize="20sp" 
			android:text="Manage Data" 
					android:layout_gravity="center_horizontal"/>

		<View android:layout_height="1px"
		android:layout_width="fill_parent"
		android:layout_marginTop="5dip"
		android:layout_marginBottom="5dip"
		android:background="#DFDFDF" />

		<TextView android:id="@+id/PreferencesLink"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:layout_margin="5dip"
		  android:textSize="20sp"
		  android:text="Preferences"
		  android:layout_gravity="center_horizontal"
		  />
	</LinearLayout>

		<ImageView
			android:src="@drawable/timepie_01" 
			android:layout_marginTop="20dip"
			android:layout_width="wrap_content"
     		android:layout_height="wrap_content"
     		android:layout_gravity="center"
			/>

</LinearLayout>
